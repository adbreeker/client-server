<Window x:Name="ChatWindow" x:Class="Klient.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Klient"
        mc:Ignorable="d"
        Title="Chat" Height="630" Width="820" ResizeMode="NoResize"
        Closing="ChatWindow_Closing">
        
    <Grid x:Name="ChatWindow1">

        <TextBlock x:Name="ChatTextVisualiser" HorizontalAlignment="Center" Padding="4,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="470" Width="780" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionTextBrushKey}}" Foreground="White" FontSize="17" FontWeight="Bold"/>
        <TextBox x:Name="ChatMessageSender" HorizontalAlignment="Center" Margin="0,495,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="780" Height="36" Background="White" FontWeight="Normal" FontSize="22"/>
        <Button x:Name="ChatMessageSenderButton" Content="Wyślij" HorizontalAlignment="Center" Margin="0,544,0,0" VerticalAlignment="Top" Height="40" Width="158" Click="ChatMessageSenderButton_Click"/>

    </Grid>
</Window>
